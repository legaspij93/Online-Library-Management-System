<html>
    <head>
        <link rel="stylesheet" type="text/css" href="signup.css">
    </head>

    <body>
        <div class="bg">
            
            <div class="bg-container">
                <img src="image/bg2.jpg" id="bg-img">
            </div>
            
            <div class="header">
                <img src="image/LOGO2.png" id="head-logo">
            </div>
            
            <div class="register-container"> 
                <div class="register-container-bg"></div>
                <div class="register-header">
                    <span class="register-header-label">Sign Up for Free!</span>
                </div>
                
                <div class="username-label">Username</div>
                <div class="email-label">Email</div>
                <div class="password-label">Password</div>
                    <form action="user/register" method="post">
                        <div class="username-input">
                            <input class="username" type="text" name="username">
                        </div>

                        <div class="email-input">
                            <input class="email" type="text" name="email">
                        </div>
                        
                        <div class="password-input">
                            <input class="password" type="password" name="password">
                        </div>

                        <div class="login-button-container">
                            <input type="submit" value="Register" class="subbutton login-button">
                        </div>
                    </form>
                
                <div class="login">
                    Have an account?
                    <a class="login-link" href="user/loginpage">Sign in!</a>
                </div>
                
            </div>
        </div>
    </body>
</html>