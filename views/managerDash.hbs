<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/managerDashcss.css">
    </head>

    <body>
        <nav>
            <img class="logo" src="/sprites/WHITE.png">

            <ul class="nav">
                <li><a href="/dashboard" name="home">Home</a></li>
                <li><a href="/user/logout" name="logout">Logout</a></li> 
            </ul>
        </nav>

        <div class="wrapper">
            

            <div class="wrapper-left">
                <ul>
                    <li data-li="addbook">
                        <p>Add Book</p>
                    </li>
                    <li data-li="addbookinst">
                        <p>Add Book Instance</p>
                    </li>
                    <li data-li="editbook">
                        <p>Manage Book</p>
                    </li>
                    <!-- <li data-li="editbookinst">
                        <p>Edit Book Instance</p>
                    </li> -->
                    <!-- <li data-li="delete">
                        <p>Delete Book</p>
                    </li>
                    <li data-li="deleteinst">
                        <p>Delete Book Instance</p>
                    </li> -->
                </ul>
            </div>
            
            <div class="wrapper-right">
                <div class="container">
                    <div class="item addbook" >
                        <div class="item-info">
                            <p>Add Book</p>
                            <div class="form-container">
                                <form action="/book/createBook" method="POST">
                                    <input type="text" name="title" placeholder="Title" />
                                    <input type="text" name="author" placeholder="Author" />
                                    <input type="text" name="publisher" placeholder="Publisher" />
                                    <input type="text" name="publicationYear" placeholder="Year of Publication" />
                                    <input type="text" name="ISBN" placeholder="ISBN" />
                                    <input type="text" name="linktoImage" placeholder="Link to Image"/>
                                    <button>Add</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="item addbookinst" style="display: none;">
                        <div class="item-info">
                            <p>Add Book Instance</p>
                            <div class="form-container">
                                <form action="/instance/createInstance" method="POST">
                                    <select id="books" name="title">
                                        <option value="" selected disabled hidden>Choose Book</option>
                                        {{#each book}}
                                            <option value="{{title}}">{{title}}</option>
                                        {{/each}}
                                        {{!-- <option value="" selected disabled hidden>Choose Book</option>
                                        <option value="lesmis">Les Miserables</option>
                                        <option value="mockingbird">To Kill a Mockigbird</option>
                                        <option value="miceandmen">Of Mice and Men</option> --}}
                                    </select>
                                    <input type="text" name="dueDate" placeholder="Due Date" />
                                    <input type="text" name="status" placeholder="Status" />
                                    {{!-- <input type="text" placeholder="Year of Publication" />
                                    <input type="text" placeholder="ISBN" />
                                    <input type="text" placeholder="Link to Image"/> --}}
                                    <button>Add Instance</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="item editbook" style="display: none;">
                        <div class="item-info">
                            <p>Manage Book</p>
                                <div class="form-container">
                                    <div class="book-container">
                                        {{#each book}}
                                            <div class="book">
                                                <div class="book-image-container">
                                                    <img class="book-image" src="{{coverImage}}">
                                                </div>
                            
                                                <div class="book-title">{{title}}</div>
                                                <div class="book-author">{{author}}</div>
                                                <div class="button-container">
                                                    <form action="/book/{{title}}" method="get">
                                                        <button id="">Manage</button>
                                                    </form>
                                                    {{!-- <button>Manage</button> --}}
                                                </div>
                                            </div>
                                        {{/each}}

                                    </div>
                                </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <script src="managerScript.js"></script>

    </body>
</html>